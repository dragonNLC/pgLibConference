<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:scrollbars="vertical"
    android:screenOrientation="portrait">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:orientation="horizontal"
	android:gravity="center" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="246dp"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:orientation="vertical" >

        <LinearLayout android:id="@+id/layoutVideoS0"
            android:layout_width="160dip"
            android:layout_height="120dip"
            android:layout_marginBottom="1dip"
            android:background="#ff000000"
            android:orientation="horizontal" >
        </LinearLayout>
        <LinearLayout android:id="@+id/layoutVideoS2"
            android:layout_width="160dip"
            android:layout_height="120dip"
            android:layout_marginBottom="1dip"
            android:background="#ff000000"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="match_parent"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:orientation="vertical" >

        <LinearLayout android:id="@+id/layoutVideoS1"
            android:layout_width="160dip"
            android:layout_height="120dip"
            android:layout_marginBottom="1dip"
            android:background="#ff000000"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout android:id="@+id/layoutVideoS3"
            android:layout_width="160dip"
            android:layout_height="120dip"
            android:layout_marginBottom="1dip"
            android:background="#ff000000"
            android:orientation="horizontal"
            >
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dip"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:orientation="horizontal" >

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_name"
            android:text="@string/group"
            android:inputType="" />

        <CheckBox
            android:text="Chairman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/btn_Start" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clean"
            android:id="@+id/btn_Clean" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify"/>
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_notify"
            android:text="hello"
            android:inputType="" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NotifySend"
            android:id="@+id/btn_notifysend" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
</ScrollView>

