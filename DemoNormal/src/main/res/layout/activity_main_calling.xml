<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:scrollbars="vertical"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="162dp"
            android:layout_height="246dp"
            android:paddingLeft="1dip"
            android:paddingRight="1dip"
            android:orientation="vertical" >

            <LinearLayout android:id="@+id/CallinglayoutVideoS0"
                android:layout_height="120dip"
                android:layout_marginBottom="1dip"
                android:background="#ff000000"
                android:orientation="horizontal"
                android:layout_width="160dp">
            </LinearLayout>
            <LinearLayout android:id="@+id/CallinglayoutVideoS2"
                android:layout_width="160dip"
                android:layout_height="120dip"
                android:layout_marginBottom="1dip"
                android:background="#ff000000"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:paddingLeft="1dip"
            android:paddingRight="1dip"
            android:orientation="vertical" >

            <LinearLayout android:id="@+id/CallinglayoutVideoS1"
                android:layout_width="160dip"
                android:layout_height="120dip"
                android:layout_marginBottom="1dip"
                android:background="#ff000000"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout android:id="@+id/CallinglayoutVideoS3"
                android:layout_width="160dip"
                android:layout_height="120dip"
                android:layout_marginBottom="1dip"
                android:background="#ff000000"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/id_str_Other" />

            <EditText
                android:id="@+id/editText_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请找客服申请测试ID"
                android:inputType=""
                android:text="" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_Call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calling" />

            <Button
                android:id="@+id/btn_handup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="handup" />

            <Button
                android:id="@+id/btn_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_info" />
        </ScrollView>
    </LinearLayout>

</ScrollView>

